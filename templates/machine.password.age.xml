<?xml version="1.0" encoding="utf-8" ?>

<policy_template>
	<id>machine.password.age</id>
	<name>Set maximum password age</name>
	<name xml:lang="ru">Установить максимальный срок действия пароля</name>
	<version>0.1</version>
	<class>machine</class>
	<requires type="package">shadow-utils</requires>
	<script>machine.password.age.sh</script>
	<parameters>
		<param type="integer" name="max_age" default="">
			<label xml:lang="ru">Срок действия (в сутках)</label>
		</param>
		<param type="integer" name="warn_age" default="">
			<label xml:lang="ru">Срок предупреждения (в сутках)</label>
		</param>		
	</parameters>
</policy_template>
