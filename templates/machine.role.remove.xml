<?xml version="1.0" encoding="utf-8" ?>

<policy_template>
	<id>machine.role.remove</id>
	<name>Remove domain group from local</name>
	<name xml:lang="ru">Удаление доменной группы из локальных</name>
	<version>0.1</version>
	<class>machine</class>
	<requires type="package">libnss-role</requires>
	<script>machine.role.remove.sh</script>
	<parameters>
		<param type="string" name="role" default="">
			<label xml:lang="ru">Доменная группа</label>
		</param>
		<param type="string" name="groups" default="">
			<label xml:lang="ru">Локальные группы (через пробел)</label>
		</param>
	</parameters>
</policy_template>
