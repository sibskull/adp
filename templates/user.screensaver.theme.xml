<?xml version="1.0" encoding="utf-8" ?>

<policy_template>
	<id>user.screensaver.theme</id>
	<name>Set screensaver mode/theme</name>
	<name xml:lang="ru">Тема хранителя экрана</name>
	<version>0.1</version>
	<class>user</class>
	<requires type="de">mate</requires>
	<script>user.screensaver.theme.sh</script>
	<parameters>
		<param type="string" name="mode" default="single">
			<label xml:lang="ru">Режим (blank-only/random/single)</label>
		</param>
		<param type="string" name="theme" default="">
			<label xml:lang="ru">Тема</label>
		</param>
	</parameters>
</policy_template>
