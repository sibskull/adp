<?xml version="1.0" encoding="utf-8" ?>

<policy_template>
	<id>machine.accounts.add</id>
	<name>Create local users</name>
	<name xml:lang="ru">Создание локальных пользователей</name>
	<version>0.1</version>
	<class>machine</class>
	<requires type="package">shadow-utils</requires>
	<script>machine.accounts.add.sh</script>
	<parameters>
		<param type="string" name="user" default="">
			<label xml:lang="ru">Логин</label>
		</param>
		<param type="string" name="comment" default="">
			<label xml:lang="ru">Комментарий</label>
		</param>
		<param type="string" name="passwd" default="">
			<label xml:lang="ru">Пароль</label>
		</param>
		<param type="string" name="additional_groups" default="">
			<label xml:lang="ru">Дополнительные группы</label>
		</param>
		<param type="string" name="time_limit" default="">
			<label xml:lang="ru">Время активности аккаунта</label>
		</param>
		<param type="string" name="shell" default="">
			<label xml:lang="ru">Оболочка по умолчанию (bash и т.д.)</label>
		</param>
	</parameters>
</policy_template>
