<?xml version="1.0" encoding="utf-8" ?>

<policy_template>
	<id>user.interface.theme</id>
	<name>Set the desktop theme for user</name>
	<name xml:lang="ru">Установить тему рабочего стола</name>
	<version>0.1</version>
	<class>user</class>
	<requires type="de">mate</requires>
	<requires de="mate" type="package">libgio</requires>
	<script>user.interface.theme.sh</script>
	<parameters>
		<param type="string" name="theme" default="">
			<label xml:lang="ru">Тема</label>
		</param>
		<param type="string" name="icon" default="">
			<label xml:lang="ru">Значки</label>
		</param>
		<param type="string" name="panel_position" default="">
			<label xml:lang="ru">Позиция панели (top/bottom)</label>
		</param>
		<param type="string" name="window_decoration" default="">
			<label xml:lang="ru">Оформление окон</label>
		</param>
	</parameters>
</policy_template>
