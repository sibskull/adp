<?xml version="1.0" encoding="utf-8" ?>

<policy_template>
	<id>machine.password.length</id>
	<name>Set minimum password length</name>
	<name xml:lang="ru">Установить минимальную длину пароля</name>
	<version>0.1</version>
	<class>machine</class>
	<requires type="package">sed</requires>
	<requires type="package">libpasswdqc</requires>
	<script>machine.password.length.sh</script>
	<parameters>
		<param type="integer" name="length1" default="">
			<label xml:lang="ru">Количество символов одного типа</label>
		</param>
		<param type="integer" name="length2" default="">
			<label xml:lang="ru">Количество символов двух типов</label>
		</param>
		<param type="integer" name="length3" default="">
			<label xml:lang="ru">Длина парольной фразы</label>
		</param>
		<param type="integer" name="length4" default="">
			<label xml:lang="ru">Количество символов трёх типов</label>
		</param>
		<param type="integer" name="length5" default="">
			<label xml:lang="ru">Количество символов четырёх типов</label>
		</param>
	</parameters>
</policy_template>
