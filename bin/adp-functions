#!/bin/sh

# Copy file from specified location or from policy share
adp_copy_file() 
{
	location="$1"; shift
	source_file="$1"; shift
	target_file="$1"; shift

	# Make path for target_file
	target_dir="$(dirname "$target_file")"
	if [ ! -e "$target_dir" ]; then
		mkdir -p "$target_dir"
	fi

	[ -z "$location" ] && location="."

	# Copy ordinary file
	cp -a "$location/$source_file" "$target_file"
}
